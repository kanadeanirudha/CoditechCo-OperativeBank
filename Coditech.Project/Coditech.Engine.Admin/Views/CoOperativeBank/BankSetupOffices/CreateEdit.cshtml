@model BankSetupOfficesViewModel
@{
    ViewBag.Title = Model.BankSetupOfficeId > 0 ? "Update Bank Setup Offices" : "Add Bank Setup Offices";
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    DropdownViewModel bankSetupDivisionDropdown = new DropdownViewModel() { DropdownType = DropdownCustomTypeEnum.BankSetupDivision.ToString(), DropdownName = "BankSetupDivisionId", DropdownSelectedValue = Model.BankSetupDivisionId.ToString(), Parameter = Model.BankSetupDivisionId.ToString(), IsCustomDropdown = true };
}
<!-- Page Content-->
<div class="page-content mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                @if (Model.BankSetupDivisionId > 0)
                                {
                                    <h4 class="card-title">Update Bank Setup Offices</h4>
                                }
                                else
                                {
                                    <h4 class="card-title">Create Bank Setup Offices</h4>
                                }
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm(actionName, controllerName, FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.BankSetupOfficeId)
                            @if (Model.BankSetupOfficeId > 0)
                            {
                                @Html.HiddenFor(m => m.BankSetupDivisionId)
                            }
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.Office, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.Office, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Office)
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.LOffice, new { @class = "form-label required" })
                                        @Html.TextBoxFor(x => x.LOffice, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.LOffice)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        @Html.LabelFor(x => x.BankSetupDivisionId, new { @class = "form-label required" })
                                        @Html.Partial("~/Views/Shared/Control/_DropdownList.cshtml", bankSetupDivisionDropdown)
                                        @Html.ValidationMessageFor(x => x.BankSetupDivisionId)
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">@AdminResources.LabelSave</button>
                            <a href="../@controllerName/List" class="btn btn-secondary"><i class="ft-x"></i>@AdminResources.LabelCancel</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



